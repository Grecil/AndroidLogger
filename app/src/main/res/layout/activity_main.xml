<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:paddingTop="16dp"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to AndroidLogger!"
        android:textSize="22sp"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/buttonViewDashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Dashboard"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonOpenSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Open Settings" />

    <Button
        android:id="@+id/buttonGenerateDemoData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generate Demo Data (TEMP)"
        android:layout_marginTop="32dp"
        android:visibility="gone"
        tools:visibility="visible"/>

</LinearLayout> 